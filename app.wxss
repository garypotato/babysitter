/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
} 

.container,
page,
view,
text,
swiper,
swiper-item,
image,
navigator {
  box-sizing: border-box;
}

text {
  line-height: normal;
}

/* spinner.wxss */
.spinner-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 1060rpx; /* 全屏加载效果 */
  background-color: rgba(255, 255, 255, 0.8); /* 半透明背景 */
}

.spinner {
  width: 40px;
  height: 40px;
  border: 4px solid #f3f3f3; /* 外环颜色 */
  border-top: 4px solid #3498db; /* 加载动画的颜色 */
  border-radius: 50%; /* 圆形 */
  animation: spin 1s linear infinite;
}

/* 动画关键帧 */
@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

